<scene version="2.1.0">
	<bsdf type="acousticbsdf" id="bsdf_neutral">
		<spectrum value="0.500000" name="scattering"/>
		<spectrum value="0.500000" name="absorption"/>
	</bsdf>
	<shape type="sphere" id="emitter">
		<float name="radius" value="0.100000"/>
        <transform name="to_world">
            <translate x="1" y="1" z="1"/>
        </transform>
		<emitter type="area">
			<texture type="uniform" name="radiance">
				<integer name="value" value="1"/>
			</texture>
		</emitter>
	</shape>
	<sensor type="microphone" id="sensor">
		<sampler type="independent">
			<integer name="sample_count" value="100"/>
		</sampler>
        <transform name="to_world">
            <translate x="-1" y="-1" z="-2"/>
        </transform>
		<film type="tape">
			<integer name="time_steps" value="100"/>
			<integer name="wav_bins" value="1"/>
			<rfilter type="gaussian">
				<float name="stddev" value="2.000000"/>
			</rfilter>
		</film>
	</sensor>
	<shape type="obj" id="shoebox">
        <transform name="to_world">
            <scale value="5"/>
        </transform>
		<string name="filename" value="meshes/cuberoom.obj"/>
		<ref id="bsdf_neutral" name="bsdf"/>
	</shape>
	<integrator type="acousticpathreparam" id="integrator">
		<integer name="max_depth" value="50"/>
		<float name="max_time" value="1.000000"/>
		<string name="wavelength_bins" value="1"/>
		<integer name="samples_per_pass" value="100"/>
	</integrator>
</scene>
